@{
  Layout = "_Layout";
}

<h1>Add a new order to @Model.Name</h1>
      <form action="/vendors/@Model.Id/orders" method="post">
        <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
        <br>
        <label for="orderTitle"></label>
        <input id="orderTitle" name="orderTitle" type="text" placeholder="Order Title">
        <br>
        <label for="orderDescription"></label>
        <input id="orderDescription" name="orderDescription" type="text" placeholder="Description">
        <br>
        <label for="orderPrice"></label>
        <input id="orderPrice" name="orderPrice" type="number" placeholder="Price">
        <br>
        <label for="orderDate"></label>
        <input id="orderDate" name="orderDate" type="text" placeholder="Date (mm/dd/yyyy)">
        <br>
        <button type='submit'>Add Order</button>
      </form>

<p><a href='/vendors'>Return to Vendor list</a></p>
<p><a href='/'>Return to Main Page</a></p>
